@model NhaKhoaQuangVu.Models.DatHen
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Cập Nhật Lịch Hẹn";
}

<h1 class="display-4">Cập Nhật Lịch Hẹn</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-controller="LichHen" asp-action="Update" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <br />
                <label asp-for="HoTen" class="font-weight-bold">Tên Khách Hàng:</label>
                <input asp-for="HoTen" class="form-control" readonly />
                <span asp-validation-for="HoTen" class="text-danger"></span>
            </div>

            <div class="form-group">
                <br />
                <label asp-for="SDT" class="font-weight-bold">Số Điện Thoại:</label>
                <input asp-for="SDT" class="form-control" readonly />
                <span asp-validation-for="SDT" class="text-danger"></span>
            </div>

            <div class="form-group">
                </br>
                <label asp-for="NgayHen" class="font-weight-bold">Ngày Hẹn:</label>
                <input asp-for="NgayHen" class="form-control" type="date" />
                <span asp-validation-for="NgayHen" class="text-danger"></span>
            </div>

            <div class="form-group">
                <br />
                <label asp-for="GioHen" class="font-weight-bold">Giờ Hẹn:</label>
                <input asp-for="GioHen" class="form-control" type="time" />
                <span asp-validation-for="GioHen" class="text-danger"></span>
            </div>

            <div class="form-group">
                </br>
                <label asp-for="MaDichVu" class="font-weight-bold">Dịch Vụ:</label>
                <select asp-for="MaDichVu" class="form-control">
                    <option value="">- Chọn dịch vụ -</option>
                    @foreach (var item in ViewBag.DichVuList as List<SelectListItem>)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>
                <span asp-validation-for="MaDichVu" class="text-danger"></span>
            </div>

            <div class="form-group">
                <br />
                <label asp-for="TrangThai" class="font-weight-bold">Trạng Thái:</label>
                <select asp-for="TrangThai" class="form-control">
                    <option value="Đã đặt lịch">Đã đặt lịch</option>
                    <option value="Đã cập nhật">Đã cập nhật</option>
                    <option value="Đã hoàn thành">Đã hoàn thành</option>
                    <option value="Đã huỷ">Đã huỷ</option>
                </select>
                <span asp-validation-for="TrangThai" class="text-danger"></span>
            </div>
            <br />
            <button type="submit" class="btn btn-primary">Cập Nhật</button>
        </form>
    </div>
</div>
