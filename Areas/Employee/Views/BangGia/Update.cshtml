@model NhaKhoaQuangVu.Models.BangGia
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Edit Product";
}
<h2>Edit Dịch Vụ</h2>
<form asp-action="Update" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="MaDichVu" />
    <div class="form-group">
        <label asp-for="TenDichVu"></label>
        <input asp-for="TenDichVu" class="form-control" />
        <span asp-validation-for="TenDichVu" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="GiaDichVu"></label>
        <input asp-for="GiaDichVu" class="form-control" />
        <span asp-validation-for="GiaDichVu" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MoTa"></label>
<textarea asp-for="MoTa" class="form-control"></textarea>

        <span asp-validation-for="MoTa" class="text-danger"></span>

    </div>

    <button type="submit" class="btn btn-primary">Update</button>

</form>
