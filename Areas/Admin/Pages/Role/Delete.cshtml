@page "/admin/role/delete/{roleid}"
@model NhaKhoaQuangVu.Areas.Admin.Pages.Role.DeleteModel
@{
    ViewData["Title"] = "Xóa role";
}

<h4>@ViewData["Title"]</h4>
<div class="row">
    <div class="col-md-6">
        <p>Bạn có chắc chắn muốn xóa Role <strong>@Model.Role.Name</strong>?</p>
        <form method="post" asp-page-handler="DeleteRole" action="/Admin/Role/Delete">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Role.Id" value="@Model.Role.Id" />
            <a class="btn btn-primary" asp-page="./Index">Danh sách</a>
            <button type="submit" class="btn btn-danger">Xóa</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
