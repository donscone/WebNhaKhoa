@model NhaKhoaQuangVu.Models.BangGia
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Add Dịch Vụ";
}
<h2>Thêm dịch vụ</h2>
<form asp-action="Add" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="TenDichVu"></label>
        <input asp-for="TenDichVu" class="form-control" />
        <span asp-validation-for="TenDichVu" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="GiaDichVu"></label>
        <input asp-for="GiaDichVu" class="form-control" />
        <span asp-validation-for="GiaDichVu" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MoTa"></label>
<textarea asp-for="MoTa" class="form-control"></textarea>

        <span asp-validation-for="MoTa" class="text-danger"></span>

    </div>
    <br />
    <div class="form-group">
        <label asp-for="ChiTiet"></label>
        <textarea asp-for="ChiTiet" class="form-control"></textarea>

        <span asp-validation-for="ChiTiet" class="text-danger"></span>

    </div>
    <br />
    <button type="submit" class="btn btn-primary">Add</button>
</form>
