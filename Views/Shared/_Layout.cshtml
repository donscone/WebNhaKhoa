<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NhaKhoaQuangVu</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NhaKhoaQuangVu.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-iBBXm8fW90+nuLcSKVBKC5M4b9J1l91F0ekIBKvzl5A2Om7O1mNABf5VbR5bOn5aw7jup7Vfmg3mG5B61i3mg==" crossorigin="anonymous" />
    <style>
        .footer-spacing {
            margin-top: 50px;
        }
    </style>
</head>
<body>
    <div class="contact-info">
        <p>Liên Lạc</p>
        <a href="https://www.facebook.com/hutechuniversity" target="_blank">
            <img src="~/images/contractbb/facebook.png" alt="Facebook">
            <span>Facebook</span>
        </a>
        <br />
        <a href="https://maps.app.goo.gl/khYbcGPbUhP4gHN18" target="_blank">
            <img src="~/images/contractbb/location.png" alt="Phone">
            <span>Địa Chỉ</span>
        </a>
        <br />
        <a href="http://zalo.me/84421131520127076" target="_blank">
            <img src="~/images/contractbb/zalo.png" alt="Zalo">
            <span>Zalo</span>
        </a>
    </div>


    <header>
        <div class="top-bar bg-light py-2">
            <div class="container d-flex justify-content-between align-items-center">
                <div>
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="~/images/contractbb/logo.png" style="width: 200px; height: auto;" />
                    </a>
                </div>
                <div>
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="~/images/contractbb/lienhe.png" style="width: 200px; height: auto;" />
                    </a>
                </div>
            </div>
        </div>

        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light" style="background-color: #38B6FF;">
            <div class="container">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon" style="color: white;"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item"><a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Trang Chính</a></li> <!-- Sử dụng class text-white để thiết lập màu chữ trắng -->
                        <li class="nav-item"><a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="LienHe">Liên Hệ</a></li>
                        <li class="nav-item"><a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="BangGia">Dịch Vụ</a></li>
                        <li class="nav-item"><a class="nav-link text-white" asp-area="" asp-controller="DatHen" asp-action="Add">Đặt Hẹn</a></li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            @if (User.Identity.IsAuthenticated && User.IsInRole("AccountDisabled"))
                            {
                                <meta http-equiv="refresh" content="0;url=/Identity/Account/Lockout/" />

                            }
                            if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a id="manage" class="nav-link text-danger" asp-area="Admin" asp-controller="BangGia" asp-action="Index">Dịch Vụ</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-danger" asp-area="Admin" asp-controller="Employee" asp-action="Index">Nhân Viên</a>
                                </li>

                            }
                            if (User.IsInRole("Employee"))
                            {
                                <li class="nav-item">
                                    <a id="manage" class="nav-link text-danger" asp-area="Employee" asp-controller="BangGia" asp-action="Index">Quản Lý Dịch Vụ</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-danger" asp-area="Employee" asp-controller="LichHen" asp-action="Index">Quản Lý Lịch Hẹn</a>
                                </li>
                            }
                        }

                    </ul>
                </div>

                @* Thanh tìm kiếm *@
                <form action="@Url.Action("Search", "Home")" method="get" class="search-form">
                    <input id="autocomplete" type="text" name="query" class="search-input" placeholder="Tìm kiếm dịch vụ..." />
                    <button type="submit" class="search-button">Tìm</button>
                </form>

                <partial name="_LoginPartial" />
            </div>
        </nav>


    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer id="main-footer" class="bg-secondary">
        <div class="container">
            <div class="row">
                <div class="">
                    </br>
                    <h3 class="title" style="color: #ffffff;">Nha Khoa Quang Vũ</h3>
                    <div class="textwidget">
                        <p style="color: #ffffff;">
                            <strong>Địa Chỉ: </strong><a style="color: #ffffff;">Khu Công nghệ cao Xa Lộ Hà Nội, Hiệp Phú, Thủ Đức, Thành phố Hồ Chí Minh.</a><br />
                            <strong>Số Điện Thoại:</strong> <em><a style="color: #ffffff;">(028) 5445.2222</a></em><br />
                            <strong>Email:</strong> <a style="color: #ffffff;">nhakhoaquangvu@gmail.com</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <!-- Lấy map từ Google Map -->
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1647.4958000049492!2d106.78451288004783!3d10.85505699455519!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3175276e7ea103df%3A0xb6cf10bb7d719327!2zSFVURUNIIC0gxJDhuqFpIGjhu41jIEPDtG5nIG5naOG7hyBUUC5IQ00gKFRodSBEdWMgQ2FtcHVzKQ!5e0!3m2!1svi!2s!4v1712667175017!5m2!1svi!2s" width="100%" height="380" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
            </div>
        </div>
        <script src="https://www.gstatic.com/dialogflow-console/fast/messenger/bootstrap.js?v=1"></script>
        <df-messenger intent="Chào Mừng"
                      chat-title="Chat Tư Vấn"
                      agent-id="e6c4b9c1-1021-4904-9056-c8a4a34b080f"
                      language-code="vi"></df-messenger>

    </footer>


    <style>
        .navbar-nav .nav-item:hover .nav-link {
            background-color: turquoise;
            transform: scale(1.1) translateY(-5px);
            transition: transform 0.3s ease, background-color 0.3s ease; /* Thêm hiệu ứng chuyển đổi màu nền */
            border-radius: 10px; /* Đặt giá trị cho border-radius để bo tròn góc */
        }
    </style>

    @* Mã Javascript của chức năng Autocomplete  *@
    @section Scripts
    {
        <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
        <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
        <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
        <script>
            $(function () {
                $("#autocomplete").autocomplete({
                    source: '/Home/Search'
                });
            });
        </script>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
